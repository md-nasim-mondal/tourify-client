# Client Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000/api

# JWT Configuration (for client-side token verification)
NEXT_PUBLIC_JWT_SECRET=your_jwt_secret_key_here_should_match_server

# Optional Configuration
NEXT_PUBLIC_APP_NAME=Tourify
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For production, update these URLs:
# NEXT_PUBLIC_API_BASE_URL=https://your-api.vercel.app/api
